<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Black"
        android:orientation="vertical"
        android:padding="@dimen/padding_10dp">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Majrekar&apos;s Voters Management Systems"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:textStyle="normal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/voter_search_middle"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Contact - 9892862864/9867262864"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/midHeader"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_5dp"
        android:paddingBottom="@dimen/padding_5dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@color/Black"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="Alphabetical Voter List"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAvlSurname"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_width_205dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_selector"
        android:padding="4dp"
        android:text="Surname Wise"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_below="@+id/btnAvlSurname"
        android:id="@+id/btnAvlName"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_width_205dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@drawable/button_selector"
        android:padding="4dp"
        android:text="Name Wise"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_below="@+id/btnAvlName"
        android:id="@+id/btnAvlBuilding"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_width_205dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@drawable/button_selector"
        android:padding="4dp"
        android:text="Building Wise"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>
    
    <Button
        android:layout_below="@+id/btnAvlBuilding"
        android:id="@+id/btnAvlAge"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/button_width_205dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@drawable/button_selector"
        android:padding="4dp"
        android:text="Age Wise"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>
    
</RelativeLayout>